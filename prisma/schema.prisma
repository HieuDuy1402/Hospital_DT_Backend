generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  COUNTER
  DISPLAY
}

enum CounterStatus {
  ACTIVE
  INACTIVE
}

enum TicketStatus {
  WAITING
  CALLING
  COMPLETED
  SKIPPED
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      Role     @default(COUNTER)
  isOnline  Boolean  @default(false)
  counter   Counter? @relation(fields: [counterId], references: [id])
  counterId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Counter {
  id          Int           @id @default(autoincrement())
  name        String
  description String?
  status      CounterStatus @default(ACTIVE)
  users       User[]
  tickets     Ticket[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Ticket {
  id         String       @id @default(uuid())
  number     Int
  displayNumber String?
  type       TicketType   @default(NORMAL)
  status     TicketStatus @default(WAITING)
  counter    Counter?     @relation(fields: [counterId], references: [id])
  counterId  Int?
  createdAt  DateTime     @default(now())
  calledAt   DateTime?
  finishedAt DateTime?
  updatedAt  DateTime     @updatedAt
}

enum TicketType {
  NORMAL
  PRIORITY
}

model SystemSetting {
  key   String @id
  value String
}

model TicketStats {
  id        Int      @id @default(autoincrement())
  date      DateTime // Format: YYYY-MM-DD (stored as onset of the day)
  type      TicketType
  count     Int      @default(0)
  updatedAt DateTime @updatedAt

  @@unique([date, type])
}
